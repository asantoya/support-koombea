<% if @success.present? %>
  $("#msg_comment").removeClass('alert-error').addClass("alert-success").html('<%= @success %>').show()
  $("#comments").append("<%= j(render @comment )%>");
  $("#comment_body").val("");
  $(".file").hide()
  $(".loader img").hide("slow")
  $(".fileupload").val("")
  setTimeout(function  () {
    $(".alert").fadeOut("slow")
  },3000);
<% else %>
  $("#msg_comment").removeClass('alert-success').addClass("alert-error").html('<%= @error %>').show()
  $(".loader img").hide("slow")
  setTimeout(function  () {
    $(".alert").fadeOut("slow")
  },3000);
<% end %>