<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field input-xxlarge' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :type, :class => 'control-label' %>
    <div class="controls select">
      <%= f.select(:ticket_type, options_for_select([['Bug', 'bug'], ['Features', 'features']], @ticket.ticket_type), {:include_blank => true}, {:class => "input-xxlarge"}) %>
    </div>
  </div>

  <% if @ticket.new_record? != true %>

    <div class="control-group">
      <%= f.label :status, :class => 'control-label' %>
      <div class="controls select">
        <%= f.select(:status, options_for_select([['Process', 'process'],['Ended', 'ended'],['Approved', 'approved'],['Pending', 'pending']], @ticket.status), {:class => "text_field input-xxlarge"} ) %>
      </div>
    </div>

  <% end %>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>

  <% if current_user.role_id == 1 %>
    <div class="control-group">
      <%= f.label :user, "Customer", :class => 'control-label' %>
      <div class="controls select">
        <%= f.select(:user_id, options_from_collection_for_select(@clients, 'id', 'email', @ticket.user_id), {:include_blank => true }, {:class => "text_field input-xxlarge"} ) %>
      </div>
    </div>
  <% end %> 

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tickets_path, :class => 'btn' %>
  </div>
<% end %>
