<div class="ticket">
  <div class="date">
    <span class="month"><%= @ticket.created_at.strftime("%b") %></span>
    <span class="day"><%= @ticket.created_at.strftime("%d") %></span>
  </div>
  <div class="item">

    <div class="status">
      <% case @ticket.status
          when "approved" %>
            <i class="icon-ok-circle"> <%= @ticket.status %></i>
        <% when "process" %>
            <i class="icon-cog"> <%= @ticket.status %></i>
        <% when "finished" %>
            <i class="icon-remove-sign"> <%= @ticket.status %></i>
        <% when "pending" %>
            <i class="icon-time"> <%= @ticket.status %></i> 
      <% end %>
    </div>
    </br>
    <h2><%= @ticket.subject %></h2>
    <p><span>Client: </span> <%= @ticket.user.name %></p>

    <p><%= markdown @ticket.description %></p>
    
    <div class="clear"></div>
  </div>

  <div id="comments">
    <%= render @ticket.comments %>
  </div>

  <div class="add-comment">
    <%= render "comments/form" %>
  </div>

</div>
<%= link_to 'Back', tickets_path, :class => "btn" %>