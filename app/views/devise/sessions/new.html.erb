<div class="center_login">
  <h2>Login</h2>
  <p>Enter your e-mail and password to sign in.</p>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email %>
    <%= f.email_field :email, :class => "input-xlarge" %></div>

    <div><%= f.label :password %>
    <%= f.password_field :password, :class => "input-xlarge" %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me, :class => "inline" %> <%= f.label :remember_me, :class => "inline" %></div>
    <% end -%>

    <div><%= f.submit "Login", :class => "btn" %></div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>